<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpgradeFragment"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/deviceID"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:text="Device ID : 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/modelName"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:text="Model"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deviceID" />

    <android.support.design.button.MaterialButton
        android:id="@+id/rebootButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="300dp"
        android:text="@string/reboot"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchAutoRun"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:text="Auto Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modelName" />


</android.support.constraint.ConstraintLayout>